<% if user_signed_in? %>
  <div id="buttons">
    <%= link_to "New Post", new_post_path %>
  </div>
  <% flash.each do |name, msg| %>
  <%= content_tag(:div, msg, class: "alert") %>
  <% end %>
<% end %>

<% @posts.each do |post| %>
  <div class="post-wrapper">
    <h2 class="title"><%= link_to post.title, post %></h2>
    <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
  </div>
<% end %>